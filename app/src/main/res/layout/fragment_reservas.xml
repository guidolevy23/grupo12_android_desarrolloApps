<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".reservas.ui.ReservasFragment">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mis Reservas"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:paddingBottom="16dp" />

    <!-- Descripción -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Acá podés ver los cursos en los que te inscribiste"
        android:textSize="14sp"
        android:gravity="center"
        android:paddingBottom="16dp"
        android:textColor="@android:color/darker_gray" />

    <!-- Contenedor para las reservas -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/coursesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone" />

    </ScrollView>

    <!-- Estado vacío -->
    <TextView
        android:id="@+id/emptyStateText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:text="No tenés cursos reservados aún.\n\n¡Andá a la sección de Inicio y inscribite en algún curso!"
        android:textSize="16sp"
        android:gravity="center"
        android:textColor="@android:color/darker_gray"
        android:visibility="visible" />

</LinearLayout>